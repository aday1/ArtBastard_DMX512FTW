{
  "name": "artbastard-dmx",
  "version": "1.0.0",
  "private": true,
  "description": "ArtBastard DMX512 Controller",
  "main": "dist/server.js",
  "scripts": {
    "install-all": "npm install && cd react-app && npm install",
    "build": "npm run build-backend && npm run build-frontend",
    "build-backend": "node build-backend.js",
    "build-frontend": "cd react-app && npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "copy-static": "copyfiles -u 1 src/public/**/* dist",
    "watch": "npx tsc -w"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/ping": "^0.4.4",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dmxnet": "^0.9.0",
    "easymidi": "^3.1.0",
    "express": "^4.21.0",
    "osc": "^2.4.3",
    "ping": "^0.4.4",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^18.0.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
