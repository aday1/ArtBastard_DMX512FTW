{
  "name": "lasertime",
  "version": "1.0.0",
  "main": "build/server.js",
  "license": "MIT",
  "scripts": {
    "start": "node build/server.js",
    "build": "tsc && npm run copy-static",
    "copy-static": "copyfiles -u 1 src/public/**/* build",
    "dev": "ts-node src/server.ts",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "prestart": "npm run build"
  },
  "dependencies": {
    "dmxnet": "^0.9.0",
    "easymidi": "^3.1.0",
    "express": "^4.21.0",
    "osc": "^2.4.3",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.10.5",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
